Algoritmo "Calculadora"

Var

   operacao : caractere
   n1, n2 : inteiro
   resultado : real


Inicio

      escreval("Qual operacao sera realizada?")
      leia(operacao)
      
      se operacao = "*" entao
         escreval("Digite dois numeros:")
         leia(n1, n2)
         resultado <- (n1 * n2)
      senao
           se operacao = "/" entao
              escreval("Digite dois numeros:")
              leia(n1, n2)
              resultado <- (n1 / n2)
           senao
                se operacao = "+" entao
                   escreval("Digite dois numeros:")
                   leia(n1, n2)
                   resultado <- (n1 + n2)
                senao
                     se operacao = "-" entao
                        escreval("Digite dois numeros:")
                        leia(n1, n2)
                        resultado <- (n1 - n2)
                     fimse
                fimse
           fimse
      fimse
      
      escreval("Resultado = ", resultado :1:2)



Fimalgoritmo
